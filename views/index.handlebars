<h1> Burger Town</h1>
<h3>Add burger</h3>
<form>
  <div class="form-group">
    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="ex. The Sad Larry">
  </div>
  <button type="submit" class="btn btn-primary">Add to Menu</button>
</form>

<h2> Burgers Waiting to be Devoured</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <span><strong>{{this.burger_name}}</strong></span>
    <button type="button" class="eatburger btn btn-success" id="eatbutton" data-id="{{this.id}}"
        data-newDevoured="{{devour}}"><strong>Eat Me</strong><span class="fa fa-usd"></span></button>
    <hr>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>
<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <span><strong>{{this.burger_name}}</strong></span>
    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
        data-newDevoured="{{devour}}">Trash<span class="btn-danger"></span></button>
    <hr>
    {{/if}}
    {{/each}}
</ul>